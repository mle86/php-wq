{
  "name": "mle86/wq",
  "type": "library",
  "description": "A simple library for work-queue and job handling.",
  "license": "MIT",

  "authors": [
    {
      "name": "Maximilian Eul",
      "email": "maximilian@eul.cc",
      "homepage": "https://github.com/mle86/php-wq"
    }
  ],

  "autoload": {
    "psr-4": { "mle86\\WQ\\": "src/WQ/" }
  },

  "autoload-dev": {
    "psr-4": { "mle86\\WQ\\Tests\\": "test/" }
  },

  "require-dev": {
    "phpunit/phpunit": "^7",
    "php-coveralls/php-coveralls": "^2.0"
  },

  "require": {
    "php": ">=7.1",
    "psr/log": "^1.0"
  },

  "scripts": {
    "test": "vendor/bin/phpunit"
  },

  "suggest": {
    "ext-pcntl": "Needed if you want to use the SignalSafeWorkProcessor."
  }
}
